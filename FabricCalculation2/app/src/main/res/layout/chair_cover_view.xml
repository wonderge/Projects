<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:gravity="center"
  android:orientation="vertical"
  tools:context=".ChairCoverView">

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="@dimen/margin"
      android:layout_marginRight="@dimen/margin"
      android:orientation="vertical">
      <EditText
        android:id="@+id/txtA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="5"
        android:hint="A (inch)"
        android:inputType="numberDecimal" />

      <EditText
        android:id="@+id/txtB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:ems="5"
        android:hint="B (inch)"
        android:inputType="numberDecimal" />
    </LinearLayout>

    <ImageView
      android:id="@+id/imageView"
      android:layout_width="110dp"
      android:layout_height="136dp"
      android:background="@drawable/chaircover" />
  </LinearLayout>

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin"
    android:orientation="horizontal">
  <EditText
    android:id="@+id/txtC"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/margin"
    android:layout_marginRight="@dimen/margin"
    android:ems="5"
    android:hint="C (inch)"
    android:inputType="numberDecimal" />

  <EditText
    android:id="@+id/txtD"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:ems="5"
    android:hint="D (inch)"
    android:inputType="numberDecimal" />
  </LinearLayout>

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin"
    android:orientation="horizontal">
  <EditText
    android:id="@+id/txtE"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/margin"
    android:layout_marginRight="@dimen/margin"
    android:ems="5"
    android:hint="E (inch)"
    android:inputType="numberDecimal" />

  <EditText
    android:id="@+id/txtF"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:ems="5"
    android:hint="F (inch)"
    android:inputType="numberDecimal" />
  </LinearLayout>

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin"
    android:orientation="horizontal">
  <EditText
    android:id="@+id/txtG"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/margin"
    android:layout_marginRight="@dimen/margin"
    android:ems="5"
    android:hint="G (inch)"
    android:inputType="numberDecimal" />

  <EditText
    android:id="@+id/txtH"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:ems="5"
    android:hint="H (inch)"
    android:inputType="numberDecimal"/>
  </LinearLayout>

  <EditText
    android:id="@+id/txtAmount"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin"
    android:ems="10"
    android:hint="@string/amount"
    android:inputType="numberDecimal" />

  <EditText
    android:id="@+id/txtFabricWidth"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin"
    android:ems="10"
    android:hint="@string/fabricWidth"
    android:inputType="numberDecimal" />

  <Button
    android:id="@+id/btnChairCoverCalculate"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin"
    android:text="@string/calculate"
    android:textSize="@dimen/fontSize" />

  <TextView
    android:id="@+id/lblChairCoverResult"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin"
    android:textSize="@dimen/fontSize" />
</LinearLayout>